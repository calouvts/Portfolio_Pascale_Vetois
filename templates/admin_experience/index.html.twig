{% extends 'layoutadmin.html.twig' %}

{% block title %}Experience index{% endblock %}

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
{% block body %}
    <h1 class ="pt-5">Liste des expériences professionnelles</h1>


    <table class="table">
        <thead class ="bg-primary">
            <tr>
                <th>Id</th>
                <th>Période</th>
                <th>Poste occupé</th>
                <th>Entreprise</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.year }}</td>
                <td>{{ experience.name }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.description }}</td>
                <td>
                 <a href="{{ path('admin_experience_show', {'id': experience.id}) }}">Détail</a>
                    <a href="{{ path('admin_experience_edit', {'id': experience.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-primary mt-5" href="{{ path('admin_experience_new') }}">Ajouter</a>
{% endblock %}
