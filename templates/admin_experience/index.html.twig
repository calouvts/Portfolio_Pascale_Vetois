{% extends 'layoutadmin.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Période</th>
                <th>Poste occupé</th>
                <th>Entreprise</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.year }}</td>
                <td>{{ experience.name }}</td>
                <td>{{ experience.company }}</td>
                <td>{{ experience.description }}</td>
                <td>
                 <a href="{{ path('admin_experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('admin_experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_experience_new') }}">Create new</a>
{% endblock %}
