    <section class="mb-5 pt-5">

        <h2 class="text-center" id="competences">Compétences</h2>
        <div class = "container my-4">
    <div class="row mx-0 d-flex justify-content-center py-3" >

        {% for competence in competences %}

            <div class="layout col-sm-6 col-md-4 col-lg-3 mt-5 pt-2">
                <div class="card margin border-0 align-items-center" >
                    <h5 class="card-title text-center textcard pb-5"> {{ competence.name }}</h5>
                    <img class="card-img-top opacitycard w-50 text-center" src="{{ vich_uploader_asset(competence, 'photocompFile') }}" alt="{{ competence.name }}">

                        <div class="card-body p-3 mt-3 responsiveslayout"> <p class="text-black-50 "> {{ competence.description }}</p></div>

                    <div class="card-body card-img-overlay">
                        <div class="description p-3 mt-3"> <p class="text-secondary "> {{ competence.description }}</p></div>
                    </div>
                </div>
                <div class="layout col-sm-6 col-md-4 col-lg-3">

                </div>
            </div>
        {% else %}
            "Il n'y a actuellement aucunes compétences saisies"
        {% endfor %}
    </div>
        </div>
    </section>






    <section class="mb-5 pt-5">
    <h2 class="text-center " id="realisations" >Réalisations</h2>
        <div class = "container my-4">
    <div class="row">


        {% for realisation in realisations %}
            <div class="layout col-sm-8 col-md-6 col-lg-4 pt-5 ">
                <div class="card margin border-0">
                    {% if realisation.projectlink != '' %}
                      <a href="{{realisation.projectlink }}" target="_blank">
                      <h5 class="card-title text-center textcard pb-3 bg-secondary pt-3"> <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-link" viewBox="0 0 16 16">
                              <path d="M6.354 5.5H4a3 3 0 0 0 0 6h3a3 3 0 0 0 2.83-4H9c-.086 0-.17.01-.25.031A2 2 0 0 1 7 10.5H4a2 2 0 1 1 0-4h1.535c.218-.376.495-.714.82-1z"/>
                              <path d="M9 5.5a3 3 0 0 0-2.83 4h1.098A2 2 0 0 1 9 6.5h3a2 2 0 1 1 0 4h-1.535a4.02 4.02 0 0 1-.82 1H12a3 3 0 1 0 0-6H9z"/>
                          </svg> {{ realisation.name }} </h5>
                    </a>
                    {% else %}
                        <h5 class="card-title text-center textcard  bg-secondary pt-3">{{ realisation.name }} <br> </h5>
                    {% endif %}

                    <img class="card-img opacitycard w-100 h-100"  href="{{realisation.projectlink }}" src="{{ vich_uploader_asset(realisation, 'realisationphotoFile') }}" alt="{{ realisation.name }}">
                    </a>

                    <div class="card-body p-3 mt-5 responsiveslayout"> <p class="text-muted "> {{ realisation.description }}</p>
                        <div>

                            <ul>
                                {% for competence in realisation.competences %}
                                    <li><img class="img-fluid little" src="{{ vich_uploader_asset(competence, 'photocompFile') }}" alt="{{ competence.name }}"> </li>
                                {% else %}
                                {% endfor %}
                            </ul>

                        </div>
                    </div>

                        <div class="card-img-overlay mt-5">

                                    <p class="card-title text-left textcard pt-5 descrealisation"> {{realisation.description }}</p>
                            <div>

                             <ul class = "descrealisation">
                            {% for competence in realisation.competences %}
                                <li><img class="img-fluid little" src="{{ vich_uploader_asset(competence, 'photocompFile') }}" alt="{{ competence.name }}"> </li>
                            {% else %}
                            {% endfor %}
                        </ul>

                        </div>


                    </div>
                </div>
            </div>

        {% else %}
            "Il n'y a actuellement aucunes compétences saisies"
        {% endfor %}
    </div>
        </div>
    </section>

    <section class="mb-5 pt-5">
    <h2 class="text-center" id="experiences" >Expériences</h2>
    <section class="container">
        <div class="row d-flex">

            {% for experience in experiences %}

                <div class="layout col-sm-8 col-md-6 col-lg-4 pt-5 ">
                    <div class="card margin border-0 align-items-center">
                        <div class="card-body row">
                            <div class="col-lg-12">
                                {% if experience.type == 'experience' %}
                                <h5 class="card-title text-center textcard bg-secondary"> {{ experience.name }}</h5>
                            <h6 class="card-title text-Left textcard text-secondary"> {{ experience.year }}</h6>
                                <p class="card-title text-left textcard"> {{ experience.company }}</p>
                                    <p class="card-title text-left textcard"> {{ experience.description }}</p>

                                {% endif %}
                            </div>


                        </div>
                    </div>
                </div>
            {% else %}
                "pas d'expérience saisies"
            {% endfor %}

        </div>
    </section>
    </section>

        <section class="mb-5 pt-5">
            <h2 class="text-center" id="formation">Formation</h2>
            <section class="container">
                <div class="row d-flex">

                    {% for experience in formations %}

                        <div class="layout col-sm-8 col-md-6 col-lg-4 pt-5 ">
                            <div class="card margin border-0">
                                <div class="card-body row">
                                    <div class="col-lg-12">
                                        {% if experience.type == 'formation' %}
                                        <h5 class="card-title text-center textcard bg-secondary"> {{ experience.name }}</h5>
                                        <h6 class="card-title text-Left textcard text-secondary"> {{ experience.year }}</h6>
                                        <p class="card-title text-left textcard"> {{ experience.company }}</p>
                                            <p class="card-title text-left textcard"> {{ experience.description }}</p>
                                        {% endif %}
                                    </div>


                                </div>
                            </div>
                        </div>
                    {% else %}
                        "pas d'expérience saisies"
                    {% endfor %}

                </div>
            </section>
        </section>

    </section>
</main>

{% endblock %}
